<Window x:Class="Cafe.Start.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cafe.Start"
        mc:Ignorable="d"
        Title="Start" Width="1500" Height="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Horizontal" Background="#eeeeee">
        <StackPanel Orientation="Horizontal" Background="#d47000">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="600" Background="#d47000">
                <TextBox Name="lblTitle" Text="Cafe Hola" TextWrapping="WrapWithOverflow" FontWeight="Bold" FontSize="100" Foreground="White" Width="500" Background="Transparent" BorderThickness="0"/>
                <TextBox Name="lblDescription" Text="Quán cà phê không nổi tiếng ở xứ Hóa Lạc" TextWrapping="WrapWithOverflow" FontWeight="Bold" FontSize="30" Margin="0 25 0 0" Foreground="White" Width="500" Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
        <Frame x:Name="frStart" NavigationUIVisibility="Hidden"/>
    </StackPanel>
</Window>
